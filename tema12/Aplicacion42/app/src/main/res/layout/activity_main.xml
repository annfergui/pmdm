<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fpmislata.practicas.aplicacion42.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Mapa General"
            android:id="@+id/button_Mapageneral" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Ubicación Actual"
            android:id="@+id/button_Ubicacionactual" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Puntos (Markers) Almacenados"
            android:id="@+id/button_Markers" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar polilineas entre puntos"
            android:id="@+id/button_Polilineas" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Polígonos en el mapa"
            android:id="@+id/button_Poligonos" />
    </LinearLayout>
</RelativeLayout>
